@page "{id:int}"
@model GYMPT.Pages.Users.UserEditModel
@{
    ViewData["Title"] = "Editar Instructor";
}

<div class="card shadow-sm">
    <div class="card-header">
        <!-- El título muestra dinámicamente el nombre del instructor que se está editando -->
        <h1 class="h3">@ViewData["Title"]: @Model.Instructor.Name @Model.Instructor.FirstLastname</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <!-- Muestra un resumen de los errores de validación en la parte superior -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Campo oculto para mantener el ID del instructor al enviar el formulario -->
            <input type="hidden" asp-for="Instructor.Id" />

            <h5 class="mt-4 mb-3">Información Personal</h5>
            <hr />
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Instructor.Name" class="form-label fw-bold">Nombre</label>
                    <input asp-for="Instructor.Name" class="form-control" />
                    <span asp-validation-for="Instructor.Name" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Instructor.FirstLastname" class="form-label fw-bold">Primer Apellido</label>
                    <input asp-for="Instructor.FirstLastname" class="form-control" />
                    <span asp-validation-for="Instructor.FirstLastname" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Instructor.SecondLastname" class="form-label fw-bold">Segundo Apellido</label>
                    <input asp-for="Instructor.SecondLastname" class="form-control" />
                    <span asp-validation-for="Instructor.SecondLastname" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.Ci" class="form-label fw-bold">Cédula de Identidad</label>
                    <input asp-for="Instructor.Ci" class="form-control" />
                    <span asp-validation-for="Instructor.Ci" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.DateBirth" class="form-label fw-bold">Fecha de Nacimiento</label>
                    <input asp-for="Instructor.DateBirth" class="form-control" type="date" />
                    <span asp-validation-for="Instructor.DateBirth" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <h5 class="mt-4 mb-3">Información Profesional</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.Specialization" class="form-label fw-bold">Especialización</label>
                    <input asp-for="Instructor.Specialization" class="form-control" placeholder="Ej: Yoga, CrossFit, Pesas..." />
                    <span asp-validation-for="Instructor.Specialization" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.HireDate" class="form-label fw-bold">Fecha de Contratación</label>
                    <input asp-for="Instructor.HireDate" class="form-control" type="date" />
                    <span asp-validation-for="Instructor.HireDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.MonthlySalary" class="form-label fw-bold">Salario Mensual (Bs.)</label>
                    <input asp-for="Instructor.MonthlySalary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Instructor.MonthlySalary" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Instructor.Email" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Instructor.Email" class="form-control" />
                    <span asp-validation-for="Instructor.Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-page="/Users/Users" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // Habilita la validación del lado del cliente (JavaScript)
        <partial name="_ValidationScriptsPartial" />
    }
}