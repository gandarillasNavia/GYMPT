@page
@model CreateClientModel

<h2>Registrar Cliente</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Client.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Primer Apellido</label>
        <input asp-for="Client.FirstLastname" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Segundo Apellido</label>
        <input asp-for="Client.SecondLastname" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">CI</label>
        <input asp-for="Client.Ci" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de Nacimiento</label>
        <input asp-for="Client.DateBirth" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" asp-page="/Clients/Clients">Cancelar</a>
</form>
