@page
@model Gympt.Pages.Memberships.MembershipsModel

<h2>Membresías</h2>

<a asp-page="MembershipCreate" class="btn btn-primary mb-3">Crear Nueva Membresía</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Sesiones Mensuales</th>
            <th>Creado Por</th>
            <th>Fecha Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Memberships)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.MonthlySessions</td>
                <td>@item.CreatedBy</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>

                <td>
                    <a asp-page="MembershipEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
